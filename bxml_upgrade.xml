<project name="pivot" default="bxml_upgrade">
    <property name="src" value="."/>

    <target name="bxml_upgrade">
        <!-- *.java -->
        <replace dir="${src}" token="org.apache.pivot.wtkx" value="org.apache.pivot.beans">
            <include name="**/*.java"/>
        </replace>

        <replace dir="${src}" token="WTKXSerializer" value="BeanSerializer">
            <include name="**/*.java"/>
        </replace>

        <replace dir="${src}" token="wtkxSerializer" value="beanSerializer">
            <include name="**/*.java"/>
        </replace>

        <replace dir="${src}" token="WTKX" value="BXML">
            <include name="**/*.java"/>
        </replace>

        <replace dir="${src}" token=".wtkx" value=".bxml">
            <include name="**/*.java"/>
        </replace>

        <!-- *.wtkx -->
        <replace dir="${src}" token="wtkx" value="bxml">
            <include name="**/*.wtkx"/>
        </replace>

        <copy todir="${src}" overwrite="true">
            <fileset dir="${src}"/>
            <globmapper from="*.wtkx" to="*.bxml"/>
        </copy>

        <delete>
            <fileset dir="${src}" includes="**/*.wtkx"/>
        </delete>
    </target>
</project>
