<TabPane selectedIndex="0"
    xmlns:wtkx="http://pivot.dev.java.net/wtkx/2008"
    xmlns="pivot.wtk" xmlns:charts="pivot.charts">
    <tabs>
        <charts:PieChartView wtkx:id="pieChartView" TabPane.Label="Pie Chart"
            seriesNameKey="name" title="Pie Chart Examples">
            <categories>
                <charts:ChartView.Category key="a" label="A"/>
                <charts:ChartView.Category key="b" label="B"/>
                <charts:ChartView.Category key="c" label="C"/>
            </categories>

            <chartData>
                <series name="Example Series 1" a="43.2" b="27.9" c="79.5"/>
                <series name="Example Series 2" a="27.9" b="43.2" c="79.5"/>
            </chartData>
        </charts:PieChartView>

        <charts:BarChartView wtkx:id="barChartView" TabPane.Label="Bar Chart"
            seriesNameKey="name" title="Bar Chart Examples"
            categoryAxisLabel="Categories" valueAxisLabel="Values"
            showLegend="true">
            <categories>
                <charts:ChartView.Category key="a" label="A"/>
                <charts:ChartView.Category key="b" label="B"/>
                <charts:ChartView.Category key="c" label="C"/>
            </categories>

            <chartData>
                <series name="Example Series 1" a="43.2" b="27.9" c="79.5"/>
                <series name="Example Series 2" a="27.9" b="43.2" c="79.5"/>
                <series name="Example Series 3" a="79.5" b="27.9" c="43.2"/>
            </chartData>
        </charts:BarChartView>

        <charts:LineChartView wtkx:id="lineChartView" TabPane.Label="Line Chart"
            seriesNameKey="name" title="Line Chart Examples"
            categoryAxisLabel="Categories" valueAxisLabel="Values"
            showLegend="false">
            <categories>
                <charts:ChartView.Category key="a" label="A"/>
                <charts:ChartView.Category key="b" label="B"/>
                <charts:ChartView.Category key="c" label="C"/>
            </categories>

            <chartData>
                <series name="Example Series 1" a="43.2" b="27.9" c="79.5"/>
                <series name="Example Series 2" a="27.9" b="43.2" c="79.5"/>
                <series name="Example Series 3" a="79.5" b="27.9" c="43.2"/>
            </chartData>
        </charts:LineChartView>
    </tabs>
</TabPane>


