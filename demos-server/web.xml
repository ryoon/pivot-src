<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
    <display-name>Pivot REST Demo Server</display-name>

    <servlet>
        <servlet-name>RESTDemoServlet</servlet-name>
        <servlet-class>org.apache.pivot.demos.rest.server.RESTDemoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RESTDemoServlet</servlet-name>
        <url-pattern>/rest_demo/*</url-pattern>
    </servlet-mapping>
</web-app>
