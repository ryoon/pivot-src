<document>
    <properties>
        <title>Suggestion Popups</title>
        <description>
            Demonstrates Pivot's <tt>SuggestionPopup</tt> class by integrating it with Yahoo!
            search.
        </description>
    </properties>

    <body>
        <p>
            This application demonstrates Pivot's SuggestionPopup class that can be used to
            provide text input auto-complete suggestions. This example queries the Yahoo! search
            API to get the list of suggestions.
        </p>
        <application class="org.apache.pivot.wtk.ScriptApplication" width="480" height="280">
            <libraries signed="true">
                <library>core</library>
                <library>web</library>
                <library>wtk</library>
                <library>wtk-terra</library>
                <library>demos</library>
            </libraries>
            <startup-properties>
                <src>/org/apache/pivot/demos/suggest/suggestion_demo.bxml</src>
            </startup-properties>
        </application>
    </body>
</document>
