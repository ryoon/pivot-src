<Window title="Stylesheet Example" maximized="true"
    xmlns:bxml="http://pivot.apache.org/bxml"
    xmlns="org.apache.pivot.wtk">
    <Border styles="{padding:8}">
        <BoxPane orientation="vertical" styles="{spacing:12}">
            <BoxPane orientation="vertical">
                <Label styleName="heading" text="Heading Text"/>
                <Label styleName="subHeading" text="Sub-Heading Text"/>
            </BoxPane>

            <Checkbox buttonData="Checkbox"/>

            <BoxPane orientation="vertical">
                <bxml:define>
                    <ButtonGroup bxml:id="buttonGroup"/>
                </bxml:define>
                <RadioButton buttonData="Radio Button 1" buttonGroup="$buttonGroup" selected="true"/>
                <RadioButton buttonData="Radio Button 2" buttonGroup="$buttonGroup"/>
                <RadioButton buttonData="Radio Button 3" buttonGroup="$buttonGroup"/>
            </BoxPane>

            <PushButton buttonData="Push Button"/>
        </BoxPane>
    </Border>
</Window>
