<SplitPane splitRatio="0.75"
    xmlns:bxml="http://pivot.apache.org/bxml"
    xmlns:test="org.apache.pivot.tests.text"
    xmlns="org.apache.pivot.wtk">
    <left>
        <TablePane styles="{verticalSpacing:8}">
            <columns>
                <TablePane.Column width="1*"/>
            </columns>

            <TablePane.Row height="1*">
                <Border>
                    <ScrollPane bxml:id="textAreaScrollPane" horizontalScrollBarPolicy="fill_to_capacity"
                        verticalScrollBarPolicy="fill_to_capacity">
                        <TextArea bxml:id="textArea" styles="{margin:10, wrapText:false}">
                           <bxml:include src="document.bxml"/>
                        </TextArea>
                    </ScrollPane>
                </Border>
            </TablePane.Row>
            <TablePane.Row height="-1">
                <BoxPane>
                    <Label>
                        <text><![CDATA[Selection:]]></text>
                    </Label>
                    <Label bxml:id="selectionStartLabel"/>
                    <Label text=":"/>
                    <Label bxml:id="selectionLengthLabel"/>
                </BoxPane>
            </TablePane.Row>
        </TablePane>
    </left>

    <right>
        <TablePane styles="{verticalSpacing:8}">
            <columns>
                <TablePane.Column width="1*"/>
            </columns>

            <TablePane.Row height="1*">
                <Border>
                    <ScrollPane horizontalScrollBarPolicy="fill_to_capacity">
                        <TreeView bxml:id="treeView">
                            <nodeRenderer>
                                <test:NodeAdapterRenderer/>
                            </nodeRenderer>
                        </TreeView>
                    </ScrollPane>
                </Border>
            </TablePane.Row>
            <TablePane.Row height="-1">
                <Checkbox buttonData="Wrap Text">
                    <buttonStateListeners>
                        <![CDATA[
                        importClass(org.apache.pivot.wtk.ScrollPane);
                        function stateChanged(button, previousState) {
                            textArea.getStyles().put("wrapText", button.isSelected());

                            var horizontalScrollBarPolicy;
                            if (button.isSelected()) {
                                horizontalScrollBarPolicy = ScrollPane.ScrollBarPolicy.FILL;
                            } else {
                                horizontalScrollBarPolicy = ScrollPane.ScrollBarPolicy.FILL_TO_CAPACITY;
                            }

                            textAreaScrollPane.setHorizontalScrollBarPolicy(horizontalScrollBarPolicy);
                        }
                        ]]>
                    </buttonStateListeners>
                </Checkbox>
            </TablePane.Row>
            <TablePane.Row height="-1">
                <Form styles="{verticalSpacing:2}">
                    <Form.Section>
                        <Label bxml:id="offsetLabel" Form.label="Offset"/>
                        <Label bxml:id="charactersLabel" Form.label="Characters"/>
                    </Form.Section>
                </Form>
            </TablePane.Row>
        </TablePane>
    </right>
</SplitPane>
