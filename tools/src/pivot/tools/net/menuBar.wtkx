<MenuBar xmlns:wtkx="http://pivot-toolkit.org/wtkx/2008"
         xmlns="pivot.wtk"
         xmlns:content="pivot.wtk.content"
         styles="{backgroundColor:10}">
  <items>
    <MenuBar.Item buttonData="Application">
      <menu>
        <Menu>
          <sections>
            <Menu.Section>
              <Menu.Item toggleButton="true" action="toggleAuthenticationAction">
                <buttonData>
                  <content:ButtonData text="Authenticate requests" icon="@vcard.png" />
                </buttonData>
              </Menu.Item>
            </Menu.Section>
            <Menu.Section>
              <Menu.Item toggleButton="true" action="toggleHostnameVerificationAction">
                <buttonData>
                  <content:ButtonData text="Use lenient hostname verification" icon="@error_go.png" />
                </buttonData>
              </Menu.Item>
              <Menu.Item action="setKeystoreAction">
                <buttonData>
                  <content:ButtonData text="Enter trusted keystore" icon="@rosette.png" />
                </buttonData>
              </Menu.Item>
            </Menu.Section>
          </sections>
        </Menu>
      </menu>
    </MenuBar.Item>
  </items>
</MenuBar>
