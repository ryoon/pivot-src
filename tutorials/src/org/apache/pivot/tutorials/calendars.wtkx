<BoxPane xmlns:wtkx="http://pivot.apache.org/wtkx"
    xmlns:content="org.apache.pivot.wtk.content"
    xmlns="org.apache.pivot.wtk">
    <Border>
        <content>
            <BoxPane styles="{padding:{top:2, left:4, bottom:8, right:4}, spacing:10}">
                <BoxPane orientation="vertical">
                    <Label text="English (US)" styles="{fontBold:true}"/>
                    <Border styles="{padding:0}">
                        <content>
                            <Calendar locale="{language:'en', country:'us'}"/>
                        </content>
                    </Border>
                </BoxPane>

                <BoxPane orientation="vertical">
                    <Label text="Français (FR)" styles="{fontBold:true}"/>
                    <Border styles="{padding:0}">
                        <content>
                            <Calendar locale="{language:'fr', country:'fr'}"/>
                        </content>
                    </Border>
                </BoxPane>

                <BoxPane orientation="vertical">
                    <Label text="Calendar Buttons" styles="{fontBold:true}"/>
                    <Form>
                        <sections>
                            <Form.Section>
                                <CalendarButton Form.label="English (US)" locale="{language:'en', country:'us'}"/>
                                <CalendarButton Form.label="Españole (US)" locale="{language:'es', country:'us'}"/>
                                <CalendarButton Form.label="Españole (ES)" locale="{language:'es', country:'es'}"/>
                                <CalendarButton Form.label="Français (FR)" locale="{language:'fr', country:'fr'}"/>
                                <CalendarButton Form.label="Français (CA)" locale="{language:'fr', country:'ca'}"/>
                            </Form.Section>
                        </sections>
                    </Form>
                </BoxPane>

            </BoxPane>
        </content>
    </Border>
</BoxPane>

