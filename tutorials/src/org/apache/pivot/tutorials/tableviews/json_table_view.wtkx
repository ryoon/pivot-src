<Window title="Table Views" maximized="true"
    xmlns:wtkx="http://pivot.apache.org/wtkx"
    xmlns="org.apache.pivot.wtk">
    <content>
        <Border styles="{padding:0}">
            <content>
                <ScrollPane horizontalScrollBarPolicy="fill_to_capacity">
                    <view>
                        <TableView wtkx:id="tableView" tableData="@standings.json"
                            styles="{showTrailingVerticalGridLine:true}">
                            <columns>
                                <TableView.Column name="nation" width="144" headerData="Nation"/>
                                <TableView.Column name="gold" width="48" headerData="Gold"/>
                                <TableView.Column name="silver" width="48" headerData="Silver"/>
                                <TableView.Column name="bronze" width="48" headerData="Bronze"/>
                                <TableView.Column name="total" width="48" headerData="Total"/>
                            </columns>

                            <tableViewSortListeners>
                                <wtkx:script>
                                <![CDATA[
                                function sortChanged(tableView) {
                                    // TODO
                                }
                                ]]>
                                </wtkx:script>
                            </tableViewSortListeners>
                        </TableView>
                    </view>

                    <columnHeader>
                        <TableViewHeader tableView="$tableView" sortMode="single_column"
                            styles="{showTrailingVerticalGridLine:true}"/>
                    </columnHeader>
                </ScrollPane>
            </content>
        </Border>
    </content>
</Window>
