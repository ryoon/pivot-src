<TablePane xmlns:wtkx="http://pivot.dev.java.net/wtkx/2008" xmlns="pivot.wtk">
    <columns>
        <TablePane.Column width="1*"/>
    </columns>
    <rows>
        <TablePane.Row height="-1">
            <FlowPane>
                <PushButton buttonData="320x240" toggleButton="true" group="sizeGroup"/>
                <PushButton buttonData="640x480" toggleButton="true" group="sizeGroup"/>
                <PushButton buttonData="800x600" toggleButton="true" group="sizeGroup"/>
            </FlowPane>
        </TablePane.Row>
        <TablePane.Row height="1*">
            <CardPane wtkx:id="cardPane" preferredWidth="-1" preferredHeight="-1"
                styles="{matchSelectedCardSize:true}">
                <Label text="320x240" preferredWidth="320" preferredHeight="240"
                    styles="{horizontalAlignment:'center', verticalAlignment:'center'}"/>
                <Label text="640x480" preferredWidth="640" preferredHeight="480"
                    styles="{horizontalAlignment:'center', verticalAlignment:'center'}"/>
                <Label text="800x600" preferredWidth="800" preferredHeight="600"
                    styles="{horizontalAlignment:'center', verticalAlignment:'center'}"/>
            </CardPane>
        </TablePane.Row>
    </rows>
</TablePane>
