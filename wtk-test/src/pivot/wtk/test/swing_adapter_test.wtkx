<Frame title="Swing Adapter Test"
    preferredWidth="480"
    preferredHeight="360"
    xmlns:wtkx="http://pivot.dev.java.net/wtkx/2008"
    xmlns:swing="javax.swing"
    xmlns="pivot.wtk">
    <content>
        <TabPane selectedIndex="0">
            <tabs>
                <SwingAdapter TabPane.name="JTextArea">
                    <swingComponent>
                        <swing:JScrollPane doubleBuffered="true">
                            <viewport>
                                <swing:JViewport>
                                    <view>
                                        <swing:JTextArea lineWrap="true" text="Enter your greeting here..." />
                                    </view>
                                </swing:JViewport>
                            </viewport>
                        </swing:JScrollPane>
                    </swingComponent>
                </SwingAdapter>
                <FlowPane TabPane.name="Empty" />
            </tabs>
        </TabPane>
    </content>
</Frame>
