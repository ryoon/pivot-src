<SplitPane splitLocation="420"
    xmlns:wtkx="http://pivot.apache.org/wtkx"
    xmlns:test="org.apache.pivot.wtk.text.test"
    xmlns="org.apache.pivot.wtk">
    <left>
        <TablePane styles="{verticalSpacing:8}">
            <columns>
                <TablePane.Column width="1*"/>
            </columns>
            <rows>
                <TablePane.Row height="1*">
                    <Border styles="{padding:0}">
                        <content>
                            <ScrollPane horizontalScrollBarPolicy="fill" verticalScrollBarPolicy="fill_to_capacity">
                                <view>
                                    <TextArea wtkx:id="textArea">
                                       <document>
                                           <wtkx:include src="document.wtkx"/>
                                       </document>
                                    </TextArea>
                                </view>
                            </ScrollPane>
                        </content>
                    </Border>
                </TablePane.Row>
                <TablePane.Row height="-1">
                    <FlowPane>
                        <Label>
                            <text><![CDATA[Selection:]]></text>
                        </Label>
                        <Label wtkx:id="selectionStartLabel"/>
                        <Label text=":"/>
                        <Label wtkx:id="selectionLengthLabel"/>
                    </FlowPane>
                </TablePane.Row>
            </rows>
        </TablePane>
    </left>

    <right>
        <TablePane styles="{verticalSpacing:8}">
            <columns>
                <TablePane.Column width="1*"/>
            </columns>
            <rows>
                <TablePane.Row height="1*">
                    <Border styles="{padding:0}">
                        <content>
                            <ScrollPane horizontalScrollBarPolicy="fill_to_capacity">
                                <view>
                                    <TreeView wtkx:id="treeView">
                                        <nodeRenderer>
                                            <test:NodeAdapterRenderer/>
                                        </nodeRenderer>
                                    </TreeView>
                                </view>
                            </ScrollPane>
                        </content>
                    </Border>
                </TablePane.Row>
                <TablePane.Row height="-1">
                    <Form styles="{verticalSpacing:2}">
                        <sections>
                            <Form.Section>
                                <Label wtkx:id="offsetLabel" Form.name="Offset"/>
                                <Label wtkx:id="charactersLabel" Form.name="Characters"/>
                            </Form.Section>
                        </sections>
                    </Form>
                </TablePane.Row>
            </rows>
        </TablePane>
    </right>
</SplitPane>
