<?xml version="1.0" encoding="UTF-8"?>

<Form id="form">
    <TextInput label="ID" textKey="id" enabled="false"/>

    <Form label="Name" contextKey="name">
        <TextInput label="Last" textKey="last"/>
        <TextInput label="First" textKey="first"/>
    </Form>

    <Checkbox buttonData="'Active'" triState="true" stateKey="active"/>

    <RadioButton buttonData="'Male'" group="gender" selectedKey="male"/>
    <RadioButton buttonData="'Female'" group="gender" selectedKey="female"/>

    <ListButton label="Favorite Shape" selectedValueKey="favoriteShape"
        valueMapping="pivot.wtkx.test.databinding.DataBindingTest$IDMapping">
        <listData>
            <item id="circle" label="Circle"/>
            <item id="ellipse" label="Ellipse"/>
            <item id="square" label="Square"/>
            <item id="rectangle" label="Rectangle"/>
            <item id="hexagon" label="Hexagon"/>
            <item id="octagon" label="Octagon"/>
        </listData>
    </ListButton>

    <Border label="Favorite Color" styles="{padding:0}">
        <ListView selectMode="multi" selectedValuesKey="favoriteColors"
            valueMapping="pivot.wtkx.test.databinding.DataBindingTest$IDMapping">
            <listData>
                <item id="red" label="Red"/>
                <item id="orange" label="Orange"/>
                <item id="yellow" label="Yellow"/>
                <item id="green" label="Green"/>
                <item id="blue" label="Blue"/>
                <item id="purple" label="Purple"/>
            </listData>
        </ListView>
    </Border>
</Form>
